<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="hibernate-h2-stock">
        <class>fr.univtln.m2dapm.stockmanagement.entities.classes.actors.Teacher</class>
        <class>fr.univtln.m2dapm.stockmanagement.entities.classes.premises.School</class>
        <class>fr.univtln.m2dapm.stockmanagement.entities.classes.premises.ClassRoom</class>
        <class>fr.univtln.m2dapm.stockmanagement.entities.classes.equipments.BoardMarker</class>
        <class>fr.univtln.m2dapm.stockmanagement.entities.classes.equipments.ChalkBox</class>
        <class>fr.univtln.m2dapm.stockmanagement.entities.classes.equipments.Computer</class>
        <class>fr.univtln.m2dapm.stockmanagement.entities.classes.equipments.SlideProjector</class>
        <class>fr.univtln.m2dapm.stockmanagement.embeddables.classes.FullName</class>
        <class>fr.univtln.m2dapm.stockmanagement.embeddables.classes.Information</class>

        <validation-mode>CALLBACK</validation-mode>

        <properties>

            <property name="javax.persistence.validation.mode" value="CALLBACK" />
            <property name="hibernate.archive.autodetection" value="class" />
            <property name="hibernate.format_sql" value="true" />

            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:tcp://localhost/~/stock" />
            <property name="javax.persistence.jdbc.user" value="sa" />

            <!-- Spécifie le 'dialecte' SQL utilisé pour communiquer avec la BDD -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />

            <!-- Indique a Hibernate de (re-)créer la BDD au lancement de l'application -->
            <property name="hibernate.hbm2ddl.auto" value="create-drop" />
            <!--<property name="hibernate.hbm2ddl.auto" value="validate" />-->
            <!--<property name="javax.persistence.schema-generation.database.action" value="create"/>-->

        </properties>

    </persistence-unit>

</persistence>